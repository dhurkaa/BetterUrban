{
  "expo": {
    "name": "UrbanReporter",
    "slug": "urban-reporter",
    "version": "1.0.0",
    "scheme": "urban-reporter",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.urban.reporter",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Ky aplikacion kërkon vendndodhjen tuaj për të raportuar problemet urbane saktë."
      }
    },
    "android": {
      "package": "com.urban.reporter",
      "permissions": [
        "LOCATION_WHEN_IN_USE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysPermissionDescription": "Lejo aplikacionin të gjejë vendndodhjen e problemit."
        }
      ],
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Lejo aplikacionin të aksesojë fotot tuaja.",
          "cameraPermission": "Lejo aplikacionin të përdorë kamerën."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}