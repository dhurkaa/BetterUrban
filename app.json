{
  "expo": {
    "name": "UrbanIssue Reporter",
    "slug": "urban-issue-reporter",
    "version": "1.0.0",
    "scheme": "urbanissuereporter",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.urbanissuereporter.app",
      "buildNumber": "1.0.0",
      "supportsTablet": true,
      "deploymentTarget": "15.1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Ky aplikacion ka nevojë për vendndodhjen tuaj për të raportuar dhe lokalizuar saktë problemet urbane.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Ky aplikacion ka nevojë për vendndodhjen tuaj për të raportuar dhe lokalizuar saktë problemet urbane.",
        "NSLocationAlwaysUsageDescription": "Ky aplikacion ka nevojë për vendndodhjen tuaj për të raportuar dhe lokalizuar saktë problemet urbane.",
        "NSCameraUsageDescription": "Ky aplikacion ka nevojë për kamerën për të marrë foto të problemeve urbane.",
        "NSPhotoLibraryUsageDescription": "Ky aplikacion ka nevojë për akses në galerinë tuaj për të zgjedhur foto të problemeve urbane.",
        "NSPhotoLibraryAddUsageDescription": "Ky aplikacion ka nevojë për leje për të ruajtur foto në galerinë tuaj.",
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleAllowMixedLocalizations": true
      },
      "config": {
        "googleMapsApiKey": "AIzaSyDxZgbLtyfCYImKp6YdY7w-PJX3_C6N7wU"
      },
      "usesAppleSignIn": false,
      "associatedDomains": []
    },
    "android": {
      "package": "com.urbanissuereporter.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundImage": "./assets/adaptive-background.png",
        "backgroundColor": "#2563EB"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.INTERNET"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDxZgbLtyfCYImKp6YdY7w-PJX3_C6N7wU"
        }
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "urbanissuereporter"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "single"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Ky aplikacion ka nevojë për vendndodhjen tuaj për të detektuar automatikisht pozicionin kur raportoni probleme urbane.",
          "isAndroidBackgroundLocationEnabled": false,
          "isIosBackgroundLocationEnabled": false
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Ky aplikacion ka nevojë për akses në fotot tuaja për të ngarkuar imazhe të problemeve urbane.",
          "cameraPermission": "Ky aplikacion ka nevojë për akses në kamerën tuaj për të fotografuar problemet urbane.",
          "microphonePermission": false
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "deploymentTarget": "15.1"
          },
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0"
          }
        }
      ],
      "expo-localization"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id-here"
      },
      "api": {
        "ipLocationUrl": "https://ipapi.co/json/",
        "reverseGeocodeUrl": "https://nominatim.openstreetmap.org/reverse"
      }
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/your-eas-project-id-here",
      "fallbackToCacheTimeout": 0
    },
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true,
      "reactCompiler": false
    },
    "description": "Aplikacion për raportimin e problemeve urbane me detektim automatik të lokacionit dhe numër telefoni kosovar.",
    "githubUrl": "https://github.com/yourusername/urban-issue-reporter",
    "primaryColor": "#2563EB",
    "androidStatusBar": {
      "backgroundColor": "#2563EB",
      "barStyle": "light-content"
    },
    "androidNavigationBar": {
      "backgroundColor": "#000000",
      "barStyle": "light-content"
    }
  }
}
